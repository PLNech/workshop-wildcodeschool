<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:algolia="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:scaleType="fitCenter"
            algolia:attribute='@{"image"}'/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/product_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#111"
            android:textSize="18sp"
            algolia:attribute='@{"name"}'
            algolia:highlightingColor='@{"@color/colorHighlight"}'/>

        <fr.wildcodeschool.amazin.NotNullTextView
            android:id="@+id/product_manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_toEndOf="@id/product_image"
            algolia:attribute='@{"manufacturer"}'
            algolia:highlighted="@{true}"/>

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_manufacturer"
            android:layout_toEndOf="@id/product_image"
            android:gravity="end"
            android:textColor="#97100b"
            android:textSize="18sp"
            algolia:attribute='@{"salePrice"}'/>

        <TextView
            android:id="@+id/product_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/product_name"
            android:layout_marginEnd="12dp"
            android:gravity="end"
            android:maxWidth="90dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            algolia:attribute='@{"category"}'
            algolia:highlighted='@{true}'/>
    </RelativeLayout>
</layout>